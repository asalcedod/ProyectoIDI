<div style="width:80%;margin:0 auto">
	<%= form_for(@tutor) do |f|%>
	<h1>Crear Monitor</h1>
	<div class="field">
		<%= f.text_field :nombre, placeholder: "Nombre", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.text_field :apellido, placeholder: "Apellido", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.text_field :programa, placeholder: "Programa", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.text_field :semestre, placeholder: "Semestre", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.text_field :cedula, placeholder: "Cedula", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.text_field :inf_contact, placeholder: "Inf. Contacto", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.submit "Guardar", class:"btn be-red white "%>
	</div>	
	<%end%>
</div>
