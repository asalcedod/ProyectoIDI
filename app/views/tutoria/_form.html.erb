<%= form_for(@tutori) do |f|%>
		<% @tutori.errors.full_messages.each do |message| %>	
			<div class="be-red white top-space">
				<%= message  %>
			</div>
		<%end%>
	<div class="field">
		<%= f.text_field :materia, placeholder: "Materia", class:"form-control"%>
	</div>
	<div class="field edit">
		<%tutor=Tutor.all.map { |tutor| [tutor.nombre] }%>
		<%= f.select( :monitor, options_for_select(tutor))%>
	</div>
	<div class="field">
		<% fecha=Time.now.strftime("%d/%m/%Y") %>
		<%= f.text_field :fecha, placeholder: "Fecha DD/MM/AAAA",value: fecha, class:"form-control"%>
	</div>
	<div class="field">
		<%= f.text_field :salon, placeholder: "Salon", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.submit "Guardar", class:"btn be-red white "%>
	</div>	
	<%end%>